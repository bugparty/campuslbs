<?xml version="1.0" encoding="utf-8"?>

 <ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:id="@+id/detail_scroll"
     android:layout_width="match_parent"
     android:layout_height="match_parent" 
    android:scrollbars="none"
    >
        
  <RelativeLayout  
     android:layout_width ="fill_parent"  
    android:layout_height ="fill_parent" >  
    
      
      
   <LinearLayout
    android:id="@+id/message_detail_part" 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|left"
    android:background="#F8F8FF"
  
  
     >
     
    <ImageView	
        android:id="@+id/amd_avater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/message_listitem_username"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="蓝精灵"
            android:textSize="16.0sp"
            android:textColor="#669900"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
        <TextView 
	       	    android:id="@+id/message_listitem_date"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:text="2 分钟前"
	       	    android:textSize="12.0sp" 
                android:textColor="#ff555555"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
	       	    />
       
            
      <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"  
	        android:layout_height="wrap_content" 
	        
	        android:layout_marginBottom="5dp"
	        android:layout_marginRight="20dp"
	        
           >
           
         <LinearLayout
            android:id="@+id/publish_part1" 
            android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       
            >
         <TextView 
             android:id="@+id/message_listitem_content"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="14.0sp"
             android:textColor="#ff555555"
             android:text="在那山的那边海的那边有一群蓝精灵，他们活泼又聪明，他们调皮又灵俐，他们自由自在生活在那 绿色的大森林，他们善良勇敢相互都关心，哦.... 可爱的蓝精灵，哦.... 可爱的蓝精灵，他们齐心合力开动脑筋，斗坏了格格巫，他们唱歌跳舞快乐多欢喜"
             />
         
         </LinearLayout>
          
        <LinearLayout 
            android:id="@+id/publish_part2"
	    	android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_below="@id/publish_part1"
	        
	        >
	       <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:id="@+id/message_listitem_picture"
        
        android:clickable="true" />
	         	
        </LinearLayout>
   </RelativeLayout>     

</LinearLayout>
    
</LinearLayout>

   <LinearLayout
       android:id="@+id/all_numbers"
       android:orientation="horizontal"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_weight="1"
       android:layout_below="@id/message_detail_part"
       android:background="#E6E6FA">
    
  
           
          <TextView
            android:id="@+id/praise_number"
             android:layout_width ="wrap_content"  
             android:layout_height ="wrap_content" 
            android:text="赞10"
            android:textSize="14.0sp"
            android:textColor="#669900"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">
           </TextView>  
          
               
           
           <TextView
            android:id="@+id/repost_number"
             android:layout_width ="wrap_content"  
             android:layout_height ="wrap_content" 
            android:text="转发10"
            android:textSize="14.0sp"
            android:textColor="#669900"
            android:layout_marginTop="10dp"
             android:layout_marginLeft="80dp">
               
           </TextView>
            
           <TextView
            android:id="@+id/comment_number"
             android:layout_width ="wrap_content"  
             android:layout_height ="wrap_content" 
            android:text="评论10"
            android:textSize="14.0sp"
            android:textColor="#669900"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp">
               
           </TextView>
       
   
 
           
   </LinearLayout>
              
  
   <LinearLayout
    android:id="@+id/message_comment_part" 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below ="@id/all_numbers" 
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp" >
    
     
      <ListView 
         android:id="@id/android:list"
        android:layout_width="match_parent"
         android:layout_height="match_parent"   
         android:scrollbars="vertical"    
         android:drawSelectorOnTop="false"
         />   
      <TextView   
       android:id="@id/android:empty"  
       android:layout_width="wrap_content"    
       android:layout_height="wrap_content"     
        android:text="还没有人评论"/>    
       
       
   </LinearLayout>


</RelativeLayout>
</ScrollView>
