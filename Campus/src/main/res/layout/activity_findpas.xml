<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Register$PlaceholderFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#ffa6a6a6"
        android:orientation="vertical">

        <TextView
            android:padding="3dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="找回密码"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:clickable="false">

        <TextView
            android:id="@+id/text1"
            android:textSize="25sp"
            android:text="请输入你的邮箱:"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp" />

        <EditText
            android:id="@+id/email"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" />

        <TextView
            android:id="@+id/text2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="验证码:"
            android:layout_below="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="6dp" />

        <EditText
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:inputType="text"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text2"
            android:layout_alignLeft="@+id/text4" />

        <TextView
            android:id="@+id/text4"
            android:layout_height="45dp"
            android:layout_width="90dp"
            android:textSize="25dp"
            android:inputType="text"
            android:paddingLeft="2dp"
            android:layout_below="@+id/editText"
            android:background="#fffffaa6"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="看不清，换一张"
            android:layout_toRightOf="@+id/text4"
            android:layout_marginLeft="40dp"
            android:layout_alignTop="@+id/text4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/editText2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="发送验证邮件"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>



