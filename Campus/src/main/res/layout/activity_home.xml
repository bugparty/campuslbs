<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/home_listview">


    </FrameLayout>


    <LinearLayout
        android:id="@+id/leftDrawer"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">


        <RelativeLayout
            android:id="@+id/user_homePage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/galaxy_mini2"
            android:clickable="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:background="@drawable/bomanhan"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bowman Han"
                android:textSize="20dp"
                android:textColor="@color/profile_title_white"
                android:id="@+id/textView"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fancycode@gmail.com"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView"
                android:layout_toRightOf="@+id/imageView"
                android:textColor="@color/profile_title_white" />
        </RelativeLayout>

        <ListView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/navigation_list"
            android:background="@drawable/grey_background"
            android:choiceMode="singleChoice"
            android:fastScrollEnabled="true">

        </ListView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/RightDrawer"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">


        <RelativeLayout
            android:id="@+id/user_homePage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/galaxy_mini2"
            android:clickable="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:background="@drawable/bomanhan"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bowman Han"
                android:textSize="20dp"
                android:textColor="@color/profile_title_white"
                android:id="@+id/textView"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fancycode@gmail.com"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView"
                android:layout_toRightOf="@+id/imageView"
                android:textColor="@color/profile_title_white" />
        </RelativeLayout>

        <ListView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/navigation_list"
            android:background="@drawable/grey_background"
            android:choiceMode="singleChoice"
            android:fastScrollEnabled="true">

        </ListView>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>